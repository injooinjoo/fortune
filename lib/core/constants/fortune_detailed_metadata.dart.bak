class DetailedLuckyItem {
  final String category;
  final String value;
  final String reason;
  final String? timeRange;
  final String? situation;
  final int? priority;

  const DetailedLuckyItem({
    required this.category,
    required this.value,
    required this.reason,
    this.timeRange,
    this.situation,
    this.priority,
  });

  factory DetailedLuckyItem.fromJson(Map<String, dynamic> json) {
    return DetailedLuckyItem(
      category: json['category'] as String,
      value: json['value'] as String,
      reason: json['reason'] as String,
      timeRange: json['time_range'] as String?,
      situation: json['situation'] as String?,
      priority: json['priority'] as int?
    );
  }

  Map<String, dynamic> toJson() {
    return {
      'category': category,
      'value': value,
      'reason': reason)
      if (timeRange != null) 'time_range': timeRange)
      if (situation != null) 'situation': situation)
      if (priority != null) 'priority': priority)
    };
  }
}