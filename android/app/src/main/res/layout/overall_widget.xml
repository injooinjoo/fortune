        android:gravity="center" />

    <!-- Engagement Badge (shown when displayState != today) -->
    <TextView
        android:id="@+id/engagement_badge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ì˜¤ëŠ˜ì˜ ìš´ì„¸ ë¯¸ë¦¬ë³´ê¸° ðŸ”®"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/engagement_badge_bg"
        android:padding="6dp"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>
