<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="오늘의 운세"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/widget_title_color" />
        
        <TextView
            android:id="@+id/last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textSize="12sp"
            android:textColor="@color/widget_subtitle_color" />
    </LinearLayout>

    <!-- Fortune Score -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">
        
        <TextView
            android:id="@+id/fortune_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="@color/widget_score_color" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/100"
            android:textSize="24sp"
            android:textColor="@color/widget_subtitle_color"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Fortune Message -->
    <TextView
        android:id="@+id/fortune_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="오늘은 새로운 기회가 찾아올 예정입니다. 긍정적인 마음을 유지하세요."
        android:textSize="14sp"
        android:textColor="@color/widget_text_color"
        android:maxLines="3"
        android:ellipsize="end" />
        
    <!-- Lucky Items Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="@drawable/widget_lucky_items_background">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="행운의 색상: "
            android:textSize="12sp"
            android:textColor="@color/widget_subtitle_color" />
            
        <TextView
            android:id="@+id/lucky_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="파란색"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_color"
            android:layout_marginEnd="16dp" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="행운의 숫자: "
            android:textSize="12sp"
            android:textColor="@color/widget_subtitle_color" />
            
        <TextView
            android:id="@+id/lucky_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_color" />
    </LinearLayout>

</LinearLayout>