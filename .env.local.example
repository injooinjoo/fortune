# Example environment variables for the fortune Next.js project.
# Copy this file to `.env.local` and provide your own values.

# Firebase configuration
NEXT_PUBLIC_FIREBASE_API_KEY=            # Firebase API key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=        # Firebase authentication domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=         # Firebase project ID
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=     # Firebase storage bucket name
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=# Firebase Cloud Messaging sender ID
NEXT_PUBLIC_FIREBASE_APP_ID=             # Firebase application ID
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=     # Firebase analytics measurement ID

# Google AdSense configuration
NEXT_PUBLIC_ADSENSE_CLIENT_ID=          # AdSense client ID (ca-pub-XXXXXXXXXXXXXXXX)
NEXT_PUBLIC_ADSENSE_SLOT_ID=            # Default AdSense slot ID for general ads
NEXT_PUBLIC_ADSENSE_DISPLAY_SLOT=       # Display banner ads slot ID (rectangle, leaderboard)
NEXT_PUBLIC_ADSENSE_INFEED_SLOT=        # In-feed ads slot ID (between content)
NEXT_PUBLIC_ADSENSE_NATIVE_SLOT=        # Native ads slot ID (matching site design)

# Supabase configuration
NEXT_PUBLIC_SUPABASE_URL=               # Supabase project URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=          # Supabase anonymous key for client-side access
SUPABASE_SERVICE_ROLE_KEY=              # Supabase service role key for server-side access
SUPABASE_JWT_SECRET=                    # Supabase JWT secret

# OpenAI configuration
OPENAI_API_KEY=                         # OpenAI API key for AI features

# MCP (Model Context Protocol) configuration
FIGMA_ACCESS_TOKEN=                     # Figma personal access token for MCP server
GITHUB_PERSONAL_ACCESS_TOKEN=           # GitHub PAT for MCP server access

# Security configuration
INTERNAL_API_KEY=                       # Internal API key for admin/cron access
CRON_SECRET=                           # Secret for cron job authentication

# Sentry Error Monitoring
NEXT_PUBLIC_SENTRY_DSN=                # Sentry DSN for client-side errors
SENTRY_DSN=                            # Sentry DSN for server-side errors
SENTRY_ORG=                            # Sentry organization slug
SENTRY_PROJECT=                        # Sentry project name
SENTRY_AUTH_TOKEN=                     # Sentry auth token for source maps
