# Fortune Flutter App Environment Variables
# SECURITY: Never commit actual values. Use different keys for dev/staging/prod

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here # Public key, safe to expose
# NEVER put service role key in client apps!

# API Configuration  
API_BASE_URL=http://localhost:3000 # Dev only
STAGING_API_BASE_URL=https://staging-api.your-domain.com
PROD_API_BASE_URL=https://api.your-domain.com # Must use HTTPS

# Google OAuth (from Google Cloud Console)
GOOGLE_WEB_CLIENT_ID=your-web-client-id.apps.googleusercontent.com
GOOGLE_IOS_CLIENT_ID=your-ios-client-id.apps.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=your-android-client-id.apps.googleusercontent.com

# Social Login
KAKAO_APP_KEY=your-kakao-app-key
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret # Keep secure!

# Payment (Public keys only)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key # Use pk_live_ for production

# Analytics (Optional)
MIXPANEL_TOKEN=your-mixpanel-token
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# AdMob (Optional)
ADMOB_IOS_APP_ID=ca-app-pub-xxxxx~xxxxx
ADMOB_ANDROID_APP_ID=ca-app-pub-xxxxx~xxxxx
ADMOB_IOS_BANNER_AD_UNIT_ID=ca-app-pub-xxxxx/xxxxx
ADMOB_ANDROID_BANNER_AD_UNIT_ID=ca-app-pub-xxxxx/xxxxx

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_ADS=false # Disable for testing
ENABLE_PAYMENT=true
USE_EDGE_FUNCTIONS=true # Use Supabase Edge Functions

# Firebase Configuration (from Firebase Console)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_WEB_API_KEY=your-web-api-key
FIREBASE_WEB_APP_ID=your-web-app-id
FIREBASE_ANDROID_API_KEY=your-android-api-key
FIREBASE_ANDROID_APP_ID=your-android-app-id
FIREBASE_IOS_API_KEY=your-ios-api-key
FIREBASE_IOS_APP_ID=your-ios-app-id
FIREBASE_MACOS_API_KEY=your-macos-api-key
FIREBASE_MACOS_APP_ID=your-macos-app-id

# Security Settings
ENCRYPTION_KEY= # Generate with: openssl rand -hex 32
JWT_SECRET= # Server-side only, don't put here
INTERNAL_API_KEY= # Server-side only, don't put here