/**
 * @endpoint POST /functions/v1/fortune-{{typeKebab}}
 * @description {{typeName}} 운세 분석
 * @requestBody {
 *   {{inputFieldsJsdoc}}
 * }
 * @response {
 *   overall_score: number,
 *   sections: FortuneSection[],
 *   advice: string,
 *   warnings?: string,
 *   luck_items?: LuckItems,
 *   percentile?: number
 * }
 */

import { serve } from 'https://deno.land/std@0.168.0/http/server.ts'
import { createClient } from 'https://esm.sh/@supabase/supabase-js@2'
import { LLMFactory } from '../_shared/llm/factory.ts'
import { PromptManager } from '../_shared/prompts/manager.ts'
import { UsageLogger } from '../_shared/usage/logger.ts'
import { calculatePercentile } from '../_shared/utils/percentile.ts'

const SUPABASE_URL = Deno.env.get('SUPABASE_URL')!
const SUPABASE_SERVICE_KEY = Deno.env.get('SUPABASE_SERVICE_ROLE_KEY')!

const corsHeaders = {
  'Access-Control-Allow-Origin': '*',
  'Access-Control-Allow-Headers': 'authorization, x-client-info, apikey, content-type',
}

interface {{typePascal}}Request {
  {{inputFieldsInterface}}
}

interface {{typePascal}}Response {
  overall_score: number
  sections: {
    title: string
    content: string
    score?: number
  }[]
  advice: string
  warnings?: string
  luck_items?: {
    color?: string
    number?: number
    direction?: string
  }
  percentile?: number
}

serve(async (req) => {
  // CORS preflight
  if (req.method === 'OPTIONS') {
    return new Response('ok', { headers: corsHeaders })
  }

  try {
    const startTime = Date.now()
    const supabase = createClient(SUPABASE_URL, SUPABASE_SERVICE_KEY)

    const requestData: {{typePascal}}Request = await req.json()
    const { {{inputFieldsList}} } = requestData

    // LLM 호출
    const llm = LLMFactory.createFromConfig('fortune-{{typeKebab}}')
    const promptManager = new PromptManager()

    const systemPrompt = promptManager.getSystemPrompt('fortune-{{typeKebab}}')
    const userPrompt = promptManager.getUserPrompt('fortune-{{typeKebab}}', {
      {{inputFieldsList}}
    })

    const llmResponse = await llm.generate(
      [
        { role: 'system', content: systemPrompt },
        { role: 'user', content: userPrompt }
      ],
      { temperature: 1, maxTokens: 8192, jsonMode: true }
    )

    const result = JSON.parse(llmResponse.content)

    // Percentile 계산
    const percentile = await calculatePercentile(
      supabase,
      'fortune-{{typeKebab}}',
      result.overall_score
    )

    // 결과 저장
    await supabase.from('fortune_results').insert({
      fortune_type: '{{type}}',
      overall_score: result.overall_score,
      result_data: result,
      created_at: new Date().toISOString()
    })

    // 성능 로깅
    const duration = Date.now() - startTime
    console.log(`[fortune-{{typeKebab}}] completed in ${duration}ms`)

    const response: {{typePascal}}Response = {
      ...result,
      percentile,
    }

    return new Response(
      JSON.stringify(response),
      { headers: { ...corsHeaders, 'Content-Type': 'application/json' } }
    )
  } catch (error) {
    console.error('[fortune-{{typeKebab}}] Error:', error)
    return new Response(
      JSON.stringify({ error: error.message }),
      { status: 500, headers: { ...corsHeaders, 'Content-Type': 'application/json' } }
    )
  }
})