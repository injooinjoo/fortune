{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(for:*)",
      "Bash(do)",
      "Bash(if [ -f \"$file\" ])",
      "Bash(then)",
      "Bash(echo \"âœ… Updated: $file\")",
      "Bash(fi)",
      "Bash(done)",
      "Bash(find:*)",
      "Bash(./scripts/parse_ux_request.sh:*)",
      "Bash(flutter analyze:*)",
      "Bash(./scripts/git_jira_commit.sh:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "acceptEdits",
    "additionalDirectories": [
      "/private/tmp"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "figma-dev-mode-mcp-server"
  ],
  "mcpServers": {
    "framer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-framer"
      ],
      "env": {}
    }
  }
}