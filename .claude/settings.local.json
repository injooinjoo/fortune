{
  "permissions": {
    "allow": [
      "Bash(if grep -q \"import.*toss_floating_progress_button.dart\" \"$file\")",
      "Bash(! grep -q \"import.*floating_bottom_button.dart\" \"$file\")",
      "Bash(then)",
      "Bash(fi)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "acceptEdits",
    "additionalDirectories": [
      "/private/tmp"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "figma-dev-mode-mcp-server"
  ],
  "mcpServers": {
    "framer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-framer"
      ],
      "env": {}
    }
  }
}