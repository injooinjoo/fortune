<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- 서비스 레이블 (고유 식별자) -->
    <key>Label</key>
    <string>com.fortune.error.monitor</string>

    <!-- 실행할 프로그램 -->
    <key>ProgramArguments</key>
    <array>
        <string>/opt/anaconda3/bin/python3</string>
        <string>/Users/jacobmac/Desktop/Dev/fortune/scripts/runtime_error_monitor.py</string>
    </array>

    <!-- 작업 디렉토리 -->
    <key>WorkingDirectory</key>
    <string>/Users/jacobmac/Desktop/Dev/fortune</string>

    <!-- 자동 시작 설정 -->
    <key>RunAtLoad</key>
    <true/>

    <!-- 프로세스 종료 시 자동 재시작 -->
    <key>KeepAlive</key>
    <dict>
        <!-- 예기치 않게 종료된 경우만 재시작 -->
        <key>SuccessfulExit</key>
        <false/>
    </dict>

    <!-- 로그 파일 경로 -->
    <key>StandardOutPath</key>
    <string>/tmp/fortune_error_monitor.log</string>

    <key>StandardErrorPath</key>
    <string>/tmp/fortune_error_monitor_error.log</string>

    <!-- 환경 변수 -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>

    <!-- 리소스 제한 -->
    <key>Nice</key>
    <integer>10</integer> <!-- 낮은 우선순위로 실행 -->

    <!-- 프로세스 제한 시간 (초) -->
    <key>ThrottleInterval</key>
    <integer>5</integer> <!-- 5초 이내 재시작 방지 -->

    <!-- 시간 기반 실행 제한 (선택사항) -->
    <!--
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>9</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>
    -->
</dict>
</plist>
