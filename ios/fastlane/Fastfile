# Fastfile for iOS

default_platform(:ios)

platform :ios do
  desc "Push a new release build to the App Store"
  lane :release do
    # Ensure git is clean
    ensure_git_status_clean
    
    # Increment build number
    increment_build_number(xcodeproj: "Runner.xcodeproj")
    
    # Build the app
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.beyond.fortuneFlutter" => "Fortune App Store Distribution"
        }
      }
    )
    
    # Upload to App Store Connect
    upload_to_app_store(
      skip_waiting_for_build_processing: true,
      force: true,
      metadata_path: "./fastlane/metadata",
      screenshots_path: "./fastlane/screenshots"
    )
    
    # Commit version bump
    commit_version_bump(
      message: "Version Bump",
      xcodeproj: "Runner.xcodeproj"
    )
    
    # Push to git
    push_to_git_remote
  end

  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Ensure git is clean
    ensure_git_status_clean
    
    # Increment build number
    increment_build_number(xcodeproj: "Runner.xcodeproj")
    
    # Build the app
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store"
    )
    
    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      distribute_external: true,
      groups: ["Beta Testers"],
      changelog: "Bug fixes and performance improvements"
    )
    
    # Commit version bump
    commit_version_bump(
      message: "Version Bump for Beta",
      xcodeproj: "Runner.xcodeproj"
    )
  end

  desc "Create app screenshots"
  lane :screenshots do
    capture_screenshots(
      workspace: "Runner.xcworkspace",
      scheme: "Runner"
    )
  end

  desc "Setup certificates and provisioning profiles"
  lane :certificates do
    match(
      type: "appstore",
      app_identifier: "com.beyond.fortuneFlutter",
      readonly: true
    )
  end

  desc "Sync certificates for development"
  lane :sync_dev_certificates do
    match(
      type: "development",
      app_identifier: "com.beyond.fortuneFlutter",
      readonly: false
    )
  end
end