# Snapfile - Fastlane Screenshot Configuration
# ZPZG App Store Screenshots

# 디바이스 목록 (App Store 요구사항)
devices([
  # iPhone 6.7" (iPhone 16 Pro Max)
  "iPhone 16 Pro Max",

  # iPhone 6.5" (iPhone 15 Pro Max)
  "iPhone 15 Pro Max",

  # iPad Pro 13" (M4)
  "iPad Pro 13-inch (M4)"
])

# 지원 언어
languages([
  "ko"
  # "en-US"  # 필요시 추가
])

# 스크린샷 저장 경로
output_directory("./fastlane/screenshots")

# 스크린샷 촬영 전 앱 삭제
clear_previous_screenshots(true)

# Xcode 설정
scheme("Runner")
workspace("Runner.xcworkspace")

# 상태바 깨끗하게
override_status_bar(true)

# 동시 실행 (빠른 촬영)
concurrent_simulators(true)

# 테스트 실패해도 계속 진행
stop_after_first_error(false)

# 스크린샷 촬영 타임아웃 (초)
launch_arguments(["-FASTLANE_SNAPSHOT YES"])

# 다크모드 비활성화 (기본 라이트모드)
dark_mode(false)

# 앱 재설치
reinstall_app(true)

# UITests 타겟 (testplan 대신 사용)
# 주의: Xcode에서 RunnerUITests 타겟이 Runner scheme에 포함되어 있어야 함
