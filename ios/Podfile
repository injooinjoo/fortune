# Uncomment this line to define a global platform for your project
platform :ios, '15.5'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

# Pre-install hook: mediapipe_face_mesh ì‹œë®¬ë ˆì´í„°/ê¸°ê¸° ë¹Œë“œ ëª¨ë‘ ì§€ì›
# TensorFlowLiteC.framework: ì‹œë®¬ë ˆì´í„°ìš© ìŠ¤í…ê³¼ ê¸°ê¸°ìš© ì›ë³¸ ëª¨ë‘ ì¤€ë¹„
pre_install do |installer|
  mediapipe_path = "#{ENV['HOME']}/.pub-cache/hosted/pub.dev"
  Dir.glob("#{mediapipe_path}/mediapipe_face_mesh-*/ios/Frameworks/TensorFlowLiteC.framework").each do |framework_path|
    binary_path = "#{framework_path}/TensorFlowLiteC"
    device_backup_path = "#{framework_path}/TensorFlowLiteC.device"
    simulator_path = "#{framework_path}/TensorFlowLiteC.simulator"

    # ì‹œë®¬ë ˆì´í„° ìŠ¤í…ì´ ì´ë¯¸ ìˆëŠ”ì§€ í™•ì¸
    if File.exist?(simulator_path) && File.exist?(device_backup_path)
      puts "âœ… TensorFlowLiteC: ì‹œë®¬ë ˆì´í„°/ê¸°ê¸°ìš© ë°”ì´ë„ˆë¦¬ ì¤€ë¹„ ì™„ë£Œ"
      next
    end

    puts "ğŸ”§ TensorFlowLiteC: ì‹œë®¬ë ˆì´í„°/ê¸°ê¸°ìš© ë°”ì´ë„ˆë¦¬ ìƒì„± ì¤‘..."

    # ì›ë³¸ì´ ê¸°ê¸°ìš©ì¸ì§€ í™•ì¸ í›„ ë°±ì—…
    vtool_output = `vtool -show-build "#{binary_path}" 2>/dev/null` rescue ""
    is_device_binary = vtool_output.include?('platform IOS') && !vtool_output.include?('IOSSIMULATOR')

    if is_device_binary && !File.exist?(device_backup_path)
      FileUtils.cp(binary_path, device_backup_path)
      puts "ğŸ“‹ ê¸°ê¸°ìš© ì›ë³¸ ì €ì¥: #{device_backup_path}"
    elsif File.exist?(device_backup_path)
      puts "ğŸ“‹ ê¸°ê¸°ìš© ë°±ì—… ì¡´ì¬í•¨"
    end

    # ì‹œë®¬ë ˆì´í„° ìŠ¤í… ìƒì„±
    unless File.exist?(simulator_path)
      temp_dir = Dir.mktmpdir
      dummy_c = "#{temp_dir}/dummy.c"
      File.write(dummy_c, <<~DUMMY
        // TensorFlowLiteC stub for iOS Simulator (non-functional)
        void* TfLiteInterpreterCreate(void* model, void* options) { return (void*)0; }
        void TfLiteInterpreterDelete(void* interpreter) {}
        int TfLiteInterpreterInvoke(void* interpreter) { return 1; }
        int TfLiteInterpreterAllocateTensors(void* interpreter) { return 1; }
        int TfLiteInterpreterGetInputTensorCount(void* interpreter) { return 0; }
        int TfLiteInterpreterGetOutputTensorCount(void* interpreter) { return 0; }
        void* TfLiteInterpreterGetInputTensor(void* interpreter, int index) { return (void*)0; }
        void* TfLiteInterpreterGetOutputTensor(void* interpreter, int index) { return (void*)0; }
        int TfLiteInterpreterResizeInputTensor(void* interpreter, int index, void* dims, int dims_size) { return 1; }
        void* TfLiteModelCreate(void* data, int size) { return (void*)0; }
        void* TfLiteModelCreateFromFile(const char* path) { return (void*)0; }
        void TfLiteModelDelete(void* model) {}
        void* TfLiteTensorData(void* tensor) { return (void*)0; }
        int TfLiteTensorByteSize(void* tensor) { return 0; }
        int TfLiteTensorType(void* tensor) { return 0; }
        int TfLiteTensorNumDims(void* tensor) { return 0; }
        int TfLiteTensorDim(void* tensor, int index) { return 0; }
        int TfLiteTensorCopyFromBuffer(void* tensor, void* buffer, int size) { return 1; }
        int TfLiteTensorCopyToBuffer(void* tensor, void* buffer, int size) { return 1; }
        const char* TfLiteTensorName(void* tensor) { return "stub"; }
        void* TfLiteInterpreterOptionsCreate() { return (void*)0; }
        void TfLiteInterpreterOptionsDelete(void* options) {}
        void TfLiteInterpreterOptionsSetNumThreads(void* options, int threads) {}
        void TfLiteInterpreterOptionsSetErrorReporter(void* options, void* reporter, void* user_data) {}
        void TfLiteInterpreterOptionsAddDelegate(void* options, void* delegate) {}
        void* TfLiteGpuDelegateV2Create(void* options) { return (void*)0; }
        void TfLiteGpuDelegateV2Delete(void* delegate) {}
        void* TfLiteCoreMlDelegateCreate(void* options) { return (void*)0; }
        void TfLiteCoreMlDelegateDelete(void* delegate) {}
        void* TfLiteXNNPackDelegateCreate(void* options) { return (void*)0; }
        void TfLiteXNNPackDelegateDelete(void* delegate) {}
        const char* TfLiteVersion() { return "stub-2.0.0"; }
      DUMMY
      )

      sdk_path = `xcrun --sdk iphonesimulator --show-sdk-path`.strip
      x86_dylib = "#{temp_dir}/x86_64.dylib"
      arm64_sim_dylib = "#{temp_dir}/arm64_sim.dylib"

      system("xcrun clang -arch x86_64 -isysroot '#{sdk_path}' " \
             "-mios-simulator-version-min=15.0 -dynamiclib " \
             "-install_name @rpath/TensorFlowLiteC.framework/TensorFlowLiteC " \
             "-o '#{x86_dylib}' '#{dummy_c}' 2>/dev/null")

      system("xcrun clang -arch arm64 -isysroot '#{sdk_path}' " \
             "-target arm64-apple-ios15.0-simulator -dynamiclib " \
             "-install_name @rpath/TensorFlowLiteC.framework/TensorFlowLiteC " \
             "-o '#{arm64_sim_dylib}' '#{dummy_c}' 2>/dev/null")

      lipo_inputs = []
      lipo_inputs << x86_dylib if File.exist?(x86_dylib) && File.size(x86_dylib) > 0
      lipo_inputs << arm64_sim_dylib if File.exist?(arm64_sim_dylib) && File.size(arm64_sim_dylib) > 0

      if lipo_inputs.length >= 1
        system("lipo -create #{lipo_inputs.map { |f| "'#{f}'" }.join(' ')} -output '#{simulator_path}'")
        puts "âœ… ì‹œë®¬ë ˆì´í„° ìŠ¤í… ìƒì„±: #{simulator_path}"
      end

      FileUtils.rm_rf(temp_dir)
    end

    # Info.plist ìƒì„± (ì—†ëŠ” ê²½ìš°)
    info_plist_path = "#{framework_path}/Info.plist"
    unless File.exist?(info_plist_path)
      File.write(info_plist_path, <<~PLIST
        <?xml version="1.0" encoding="UTF-8"?>
        <!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
        <plist version="1.0">
        <dict>
          <key>CFBundleDevelopmentRegion</key>
          <string>en</string>
          <key>CFBundleExecutable</key>
          <string>TensorFlowLiteC</string>
          <key>CFBundleIdentifier</key>
          <string>org.tensorflow.lite.c</string>
          <key>CFBundleInfoDictionaryVersion</key>
          <string>6.0</string>
          <key>CFBundleName</key>
          <string>TensorFlowLiteC</string>
          <key>CFBundlePackageType</key>
          <string>FMWK</string>
          <key>CFBundleShortVersionString</key>
          <string>2.0.0</string>
          <key>CFBundleVersion</key>
          <string>1</string>
          <key>MinimumOSVersion</key>
          <string>15.0</string>
        </dict>
        </plist>
      PLIST
      )
      puts "ğŸ“‹ Info.plist ìƒì„±"
    end

    # ë©”ì¸ ë°”ì´ë„ˆë¦¬ëŠ” ì‹œë®¬ë ˆì´í„°ìš©ìœ¼ë¡œ ì„¤ì • (post_installì—ì„œ ê¸°ê¸°ìš©ìœ¼ë¡œ ì „í™˜ ê°€ëŠ¥)
    # Xcodeì—ì„œ ë¹Œë“œ ì‹œ FRAMEWORK_SEARCH_PATHSë¡œ ì¡°ê±´ë¶€ ì„ íƒ
    if File.exist?(simulator_path)
      FileUtils.cp(simulator_path, binary_path)
      puts "âœ… ë©”ì¸ ë°”ì´ë„ˆë¦¬: ì‹œë®¬ë ˆì´í„° ìŠ¤í…ìœ¼ë¡œ ì„¤ì •"
    end
  end
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Naver SDK moved to SPM (naveridlogin-sdk-ios-spm). Remove CocoaPods version to avoid API mismatch.
  # pod 'naveridlogin-sdk-ios'

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    # Update deployment target to iOS 15.0 minimum
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'

      # Enable permission_handler permissions (CRITICAL for iOS permissions to work!)
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'PERMISSION_MICROPHONE=1'
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'PERMISSION_SPEECH_RECOGNIZER=1'
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'PERMISSION_CAMERA=1'
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'PERMISSION_PHOTOS=1'
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'PERMISSION_LOCATION=1'
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'PERMISSION_NOTIFICATIONS=1'
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'PERMISSION_APP_TRACKING_TRANSPARENCY=1'
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'PERMISSION_CALENDARS=1'

      # Silence ALL warnings for third-party pods - MAXIMUM SUPPRESSION
      config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'
      config.build_settings['SWIFT_SUPPRESS_WARNINGS'] = 'YES'
      config.build_settings['CLANG_WARN_DEPRECATED_OBJC_IMPLEMENTATIONS'] = 'NO'
      config.build_settings['CLANG_WARN_DEPRECATED_IMPLEMENTATIONS'] = 'NO'
      config.build_settings['GCC_WARN_64_TO_32_BIT_CONVERSION'] = 'NO'
      config.build_settings['CLANG_WARN_OBJC_IMPLICIT_RETAIN_SELF'] = 'NO'
      config.build_settings['CLANG_WARN_DOCUMENTATION_COMMENTS'] = 'NO'
      config.build_settings['OTHER_CFLAGS'] = '$(inherited) -Wno-deprecated -Wno-deprecated-declarations'
      config.build_settings['OTHER_SWIFT_FLAGS'] = '$(inherited) -suppress-warnings'

      # Fix code signing for Stripe frameworks
      if target.name.start_with?('Stripe')
        config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
      end

      # Suppress google_mobile_ads warnings
      if target.name == 'google_mobile_ads'
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'SILENCE_DEPRECATION=1'
      end
    end
    
    # Fix geocoding_ios privacy file issue
    if target.name == 'geocoding_ios'
      target.build_configurations.each do |config|
        config.build_settings['EXCLUDED_SOURCE_FILE_NAMES'] = 'PrivacyInfo.xcprivacy'
      end
    end

    # Fix architectures for Apple Silicon Macs
    target.build_configurations.each do |config|
      config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = ""
    end

    # MediaPipe Face Mesh - weak linkingìœ¼ë¡œ ì‹œë®¬ë ˆì´í„° ë¹Œë“œ ì§€ì›
    # ì‹œë®¬ë ˆì´í„°: ë¹Œë“œ O, Face Mesh ëŸ°íƒ€ì„ X (ì¹´ë©”ë¼ë§Œ)
    # ì‹¤ì œ ê¸°ê¸°: ë¹Œë“œ O, Face Mesh ì™„ì „ ë™ì‘
    if target.name == 'mediapipe_face_mesh'
      target.build_configurations.each do |config|
        # í”„ë ˆì„ì›Œí¬ ê²½ë¡œ ì¶”ê°€ (pre-installì—ì„œ ìƒì„±í•œ ìœ ë‹ˆë²„ì„¤ ë°”ì´ë„ˆë¦¬ í¬í•¨)
        framework_path = "#{ENV['HOME']}/.pub-cache/hosted/pub.dev/mediapipe_face_mesh-1.2.4/ios/Frameworks"
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] ||= ['$(inherited)']
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] << "\"#{framework_path}\""

        # ì‹œë®¬ë ˆì´í„°ì—ì„œ TensorFlowLiteC ë§í¬ ì™„ì „ ì œê±°í•˜ê³  undefined symbol í—ˆìš©
        config.build_settings['OTHER_LDFLAGS[sdk=iphonesimulator*]'] = [
          '$(inherited)',
          '-Wl,-undefined,dynamic_lookup'
        ]

        # ì‹œë®¬ë ˆì´í„°ì—ì„œ TensorFlowLiteCë¥¼ ë¹Œë“œí•˜ì§€ë§Œ ë§í¬í•˜ì§€ ì•ŠìŒ
        # ê¸°ì¡´ -framework TensorFlowLiteCë¥¼ ì œê±°
        if config.build_settings['OTHER_LDFLAGS'].is_a?(Array)
          config.build_settings['OTHER_LDFLAGS'].reject! { |flag| flag.include?('TensorFlowLiteC') }
        end
      end

      # ë¹Œë“œ í˜ì´ì¦ˆì—ì„œ TensorFlowLiteCë¥¼ Weakë¡œ ë§ˆí‚¹ (ì‹¤ì œ ê¸°ê¸°ìš©)
      target.build_phases.each do |phase|
        if phase.respond_to?(:name) && phase.name == 'Frameworks'
          phase.files.each do |file|
            if file.file_ref && file.file_ref.path && file.file_ref.path.include?('TensorFlowLiteC')
              file.settings ||= {}
              file.settings['ATTRIBUTES'] ||= []
              file.settings['ATTRIBUTES'] << 'Weak' unless file.settings['ATTRIBUTES'].include?('Weak')
            end
          end
        end
      end
    end
  end
  
  # Fix Xcode 15 compatibility issues and deployment targets
  installer.generated_projects.each do |project|
    project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      end
    end
  end
  
  # Fix specific pod deployment targets and architectures
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
    config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = ""
  end
end
